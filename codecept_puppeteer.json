{
  "output": "tests/output",
  "helpers": {
    "Puppeteer": {
      "url": "{PMM_URL_HERE}",
      "browser": "chrome",
      "show": false,
      "waitForNavigation": [ "domcontentloaded", "networkidle0" ],
      "windowSize": "2560x6120",
      "chrome": {
        "args": [ "--disable-gpu", "--window-size=2560,6120", "--no-sandbox" ],
        "ignoreHTTPSErrors": true
      }
    },
    "ResembleHelper" : {
      "require": "codeceptjs-resemblehelper",
      "screenshotFolder": "./tests/output/",
      "baseFolder": "./tests/screenshots/base/",
      "diffFolder": "./tests/screenshots/diff/"
    },
    "Mochawesome": {
      "uniqueScreenshotNames": "false"
    },
    "FileSystem": {},
    "REST": {}
  },
  "include": {
    "loginPage": "./tests/pages/loginPage.js",
    "homePage": "./tests/pages/homePage.js",
    "remoteInstancesPage" : "./tests/pages/remoteInstancesPage.js",
    "adminPage" : "./tests/pages/adminPage.js",
    "systemOverviewPage" : "./tests/pages/systemOverviewPage.js",
    "compareSystemParametersPage" : "./tests/pages/compareSystemParametersPage.js",
    "mysqlOverviewPage": "./tests/pages/mysqlOverviewPage.js",
    "postgresqlOverviewPage": "./tests/pages/postgresqlOverviewPage.js",
    "mongodbOverviewPage": "./tests/pages/mongodbOverviewPage.js",
    "summaryDashboardPage": "./tests/pages/summaryDashboardPage.js",
    "trendsDashboardPage": "./tests/pages/trendsDashboardPage.js",
    "proxysqlOverviewPage": "./tests/pages/proxysqlOverviewPage.js",
    "advancedDataExplorationPage": "./tests/pages/advancedDataExplorationPage.js",
    "crossServerGraphsPage": "./tests/pages/crossServerGraphsPage.js",
    "prometheusPage": "./tests/pages/prometheusPage.js",
    "prometheusExporterStatusPage": "./tests/pages/prometheusExporterStatusPage.js",
    "prometheusExporterOverviewPage": "./tests/pages/prometheusExporterOverviewPage.js",
    "pxcGaleraClusterOverviewPage": "./tests/pages/pxcGaleraClusterOverviewPage.js",
    "qanPage" : "./tests/pages/qanPage.js",
    "mongoDbClusterSummaryPage": "./tests/pages/mongoDbClusterSummaryPage.js",
    "pmmInventoryPage": "./tests/pages/pmmInventoryPage.js"
  },
  "multiple": {
    "parallel": {
      "chunks": 2,
      "browsers": ["chrome"]
    }
  },
  "mocha": {
    "reporterOptions": {
      "codeceptjs-cli-reporter": {
        "stdout": "-",
        "options": {
          "verbose": false,
          "steps": true
        }
      },
      "mocha-junit-reporter": {
        "stdout": "./tests/output/console.log",
        "options": {
          "mochaFile": "./tests/output/result.xml"
        }
      },
      "mochawesome": {
        "stdout": "./tests/output/mocharesult.log",
        "options": {
          "reportDir": "./tests/output",
          "reportFilename": "result.html"
        }
      }
    }
  },
  "plugins": {
    "allure": {
      "enabled": true
    }
  },
  "bootstrap": false,
  "teardown": null,
  "hooks": [],
  "gherkin": {},
  "tests": "tests/*_visualtest.js",
  "timeout": 10000,
  "name": "pmm-qa"
}